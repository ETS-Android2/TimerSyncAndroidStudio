<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFC107"
                android:endColor="#CDDC39"

                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="1000dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/black"
                android:endColor="#D61313"

                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#C6F8F8F8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="1000dp" />

        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/black"
                android:endColor="#D61313"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#8BB1A00C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="1000dp" />

        </shape>
    </item>


    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#39736E6E"
                android:endColor="#D1C9C9"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#8BB1A00C" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners android:radius="1000dp" />

        </shape>
    </item>

</selector>

